{
    "env": {
        "browser": true,
        "mocha": true,
        "node": true    
    },
    "globals":{
    	"sinon": false,
    	"inject": false,
    	"assert": false,
    	"expect": false,
    	"angular": false,
        "d3": false,
        "browser": false,
        "protractor": false,
        "element": false,
        "by": false
    },
    "plugins": [
        "angular",
    ],
    "rules": {
        "dot-notation": 0,
    	"no-eq-null": 2,
        "no-underscore-dangle": 0,
        "no-unused-vars": 1,
    	"no-extra-parens": 2,
    	"no-floating-decimal": 2,
    	"no-lonely-if": 2,
    	"no-multiple-empty-lines": [2, {"max": 2}],
    	"no-self-compare": 2,
    	"brace-style": [2, "1tbs"],
    	"comma-style": [2, "last"],
    	"complexity": [1, 10],
    	"consistent-this": [2, "self"],
    	"func-style": [2, "declaration"],
    	"max-depth": [1, 3],
    	"max-len": [1, 300, 4],
    	"max-nested-callbacks": [1, 6],
    	"max-params": [1, 10],
    	"max-statements": [1, 30],
    	"one-var": 1,
    	"space-after-function-name": [0, "always"],
        "space-before-blocks": [0, "never"],
        "space-in-brackets": [0, "never"],
        "space-in-parens": [0, "never"],
    	"no-warning-comments": [1, { "terms": ["todo", "fixme", "xxx"], "location": "anywhere" }],
    	"quotes": [1, "single", "avoid-escape"],
    	"no-use-before-define": [2, "nofunc"],
    	"angular/ng_angularelement": 2,
    	"angular/ng_directive_name": [1, "sg"],
        "angular/ng_window_service": 0,
        "angular/ng_document_service": 0,
        "angular/ng_definedundefined": 0,
        "angular/ng_angularelement": 0,
        "angular/ng_json_functions": 0,
        "angular/ng_controller_as_vm": 0,
        "angular/ng_controller_as_route": 0,
        "angular/ng_controller_as": 0,
        "angular/ng_controller_name": [2, "/[a-z].*Controller$/"]
    }
}